<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Orpheus.MainHeader" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>
    <style name="TextAppearance.Orpheus.Header" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="TextAppearance.Orpheus.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/main_green</item>
        <item name="android:drawableTint">@color/main_green</item>
        <item name="android:backgroundTint">@color/main_green</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Orpheus.NormalText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>


</resources>